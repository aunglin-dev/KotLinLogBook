<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Update Note"
        android:textColor="@color/PrimaryBlue"
        android:textSize="27sp"
        android:id="@+id/AddNoteUpdate"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_alignTop="@id/AddNoteUpdate"
        android:src="@drawable/baseline_done_all_24"
        app:iconTint="@color/black"
        android:backgroundTint="@color/PrimaryBlue"
        android:id="@+id/updatesaveBtn"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter The New Note"
        android:padding="15dp"
        android:textSize="25dp"
        android:layout_below="@id/AddNoteUpdate"
        android:background="@drawable/blue_broder"
        android:maxLines="1"
        android:layout_marginTop="20dp"
        android:id="@+id/updatetitleTxt"
        />



</RelativeLayout>